                <th>Tiêu đề</th>
                <th>Danh mục</th>
                <th>Chuyên mục phụ</th>
                <th>Ngày đăng</th>
                <th>Trạng thái</th>
                {{#if (Stringcompare status "Chờ duyệt")}}
                    <th>Hành động</th>
                {{/if}}
                {{#if (Stringcompare status "Từ chối")}}
                    <th>Hành động</th>
                {{/if}}
                {{#if (Stringcompare status "Chờ duyệt")}}
                <th>Duyệt</th>
                <th>Từ chối</th>
                {{/if}}
                {{#if (Stringcompare status "Từ chối")}}
                <th>Duyệt</th>
                {{/if}}
                {{#if (Stringcompare status "Đã xuất bản")}}
                   <th></th>
                {{/if}}
                 {{#if (Stringcompare status "Chờ xuất bản")}}
                   <th></th>
                {{/if}}
                <th>Xem nội dung bài viết</th>
            </tr>
        </thead>
        <tbody>
     
            {{#each posts}}
            <tr>
                <td>{{this.PostID}}</td>
                <td>{{this.PostTitle}}</td>
                <td>{{this.CName}}</td>
                <td>{{this.SCName}}</td>
                <td>{{this.TimePost}}</td>
                <td>{{this.StatusPost}}</td>
